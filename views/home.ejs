<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
    <style>
        /* Inline CSS styles to override or add specific styles if needed */
        body {
            background-color: black;
        }
        .dropdown-menu {
            background-color: #333;
        }
        .dropdown-item {
            color: #fff;
        }
        .dropdown-item:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <div class="navBar">
        <div class="logo" style="margin-left: 25px;">
            <a href="#"><img src="1.PNG" width="100px" height="40px" alt="Logo"></a>
        </div>
        <div class="menu">
            <!-- Dropdown Menu for Navigation -->
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Menu
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Movies</a></li>
                    <li><a class="dropdown-item" href="#">Series</a></li>
                    <li><a class="dropdown-item" href="/mywatchlist">My Watchlist</a></li>
                    <li><a class="dropdown-item" href="/myratings">My Ratings</a></li>
                </ul>
            </div>

            <!-- Search Bar -->
            <div id="searching">
                <div class="search_bar">
                    <input placeholder="Search MOVU" onkeyup="captureString()" id="inputField" aria-label="Search">
                    <i class="fa-solid fa-magnifying-glass" style="color: black;"></i>
                </div>
                <div id="search_result"></div>
            </div>

            <!-- Navigation Links -->
            <div style="display: flex; justify-content: space-around; margin: 0px 25px;">
                <a class="anchor_change" href="#" style="margin-right: 20px;">Home</a>
                <a class="anchor_change" href="#">About</a>
            </div>

            <!-- User Profile Dropdown -->
            <div style="display: flex; justify-content: space-around; margin: 0px 25px;">
                <% if (user) { %>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-regular fa-user"></i> <%= user.Email %>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                <% } else { %>
                    <div class="profile" style="display: flex; justify-content: space-around; margin: 0px 25px;">
                        <i class="fa-regular fa-user"></i>
                        <a class="anchor_change" href="/login">Login</a>
                    </div>
                <% } %>
                
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="movies">
        <!-- Movie Banners and Containers -->
        <div class="banner">
            <div class="red_marker"></div>
            <h1>Top Rated</h1>
            <i class="fa-solid fa-angle-right"></i>
        </div>
        <div class="movieContainer">
            <div class="buttons">
                <button id="btn-left2"><i class="fa-solid fa-angle-left"></i></button>
            </div>
            <div class='moviesList'></div>
            <div class="buttons">
                <button id="btn-right2"><i class="fa-solid fa-angle-right"></i></button>
            </div>
        </div>

        <!-- Repeat similar sections for Now Showing and Up Coming -->
        <div class="banner">
            <div class="red_marker"></div>
            <h1>Now Showing</h1>
            <i class="fa-solid fa-angle-right"></i>
        </div>
        <div class="movieContainer">
            <div class="buttons">
                <button id="btn-left"><i class="fa-solid fa-angle-left"></i></button>
            </div>
            <div class='nowShowing'></div>
            <div class="buttons">
                <button id="btn-right"><i class="fa-solid fa-angle-right"></i></button>
            </div>
        </div>

        <div class="banner">
            <div class="red_marker"></div>
            <h1>Up Coming</h1>
            <i class="fa-solid fa-angle-right"></i>
        </div>
        <div class="movieContainer">
            <div class="buttons">
                <button id="btn-left3"><i class="fa-solid fa-angle-left"></i></button>
            </div>
            <div class='upcomingList'></div>
            <div class="buttons">
                <button id="btn-right3"><i class="fa-solid fa-angle-right"></i></button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-5 d-flex align-items-center" style="color: beige !important;">
                <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                    <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
                </a>
                <span class="mb-3 mb-md-0 text-muted" id="white-style">Â© 2023 Company, Inc</span>
            </div>
            <ul class="footer-flex">
                <li><i class="fa-brands fa-facebook"></i></li>
                <li><i class="fa-brands fa-x-twitter"></i></li>
                <li><i class="fa-brands fa-instagram"></i></li>
            </ul>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
